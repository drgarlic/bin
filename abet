#!/usr/bin/env bash
#
#    ^   ||''\ ||''| ['|']
#   //\  ||--< ||-     |  
#  //''\ ||__/ ||__|  .|  
#
# Description:              Yet another Ascii alphaBET
# Dependencies:             pure
# Optionnal dependencies:   none
# Author:                   gawlk
# Contributors:             none

# ---
# IMPORTS
# ---

. pure

# ---
# A
# ---
#
#   ^
#  //\
# //''\

abet.a() {
    local line0="   ^  "
    local line1="  //\\ "
    local line2=" //''\\"
    printf '%s\n%s\n%s' "$line0" "$line1" "$line2"
}

# ---
# B
# ---
#
# ||''\
# ||--<
# ||__/

abet.b() {
    local line0=" ||''\\"
    local line1=" ||--<"
    local line2=" ||__/"
    printf '%s\n%s\n%s' "$line0" "$line1" "$line2"
}

# ---
# C
# ---
#
#  //'.
# ||   
#  \\_/

abet.c() {
    local line0="  //'."
    local line1=" ||   "
    local line2="  \\\\_/"
    printf '%s\n%s\n%s' "$line0" "$line1" "$line2"
}

# ---
# D
# ---
#
# ||'\
# ||  |
# ||_/

abet.d() {
    local line0=" ||'\\ "
    local line1=" ||  |"
    local line2=" ||_/ "
    printf '%s\n%s\n%s' "$line0" "$line1" "$line2"
}

