# ``--|
# \\__|

abet.9() {
    local line0=" //''|"
    local line1=" \`\`--|"
    local line2=" \\\\__|"
    printf '%s\n%s\n%s' "$line0" "$line1" "$line2"
}

# ---
# .
# ---
#
#
# o

abet.dot() {
    local line0="  "
    local line1="  "
    local line2=" o"
    printf '%s\n%s\n%s' "$line0" "$line1" "$line2"
}

# ---
# MAIN
# ---

abet.main() {
    local string="$( pure.lower "$1" )"

    local char

    local line0
    local line1
    local line2

    local oldIFS

    local ascii_char

    if [[ -n "$string" ]]
    then
        for (( i=0; i < ${#string}; i++ ))
        do
            char="${string:$i:1}"

            case "$char" in
                [a-z] | [0-9])
                    oldIFS=$IFS
                    IFS=$'\n'

                    ascii_char=( $( abet."$char" ) )
                    
                    line0+="${ascii_char[0]}"
                    line1+="${ascii_char[1]}"
                    line2+="${ascii_char[2]}"

                    IFS=$oldIFS
                ;;
                ".")
                    oldIFS=$IFS
                    IFS=$'\n'

                    ascii_char=( $( abet.dot ) )
                    
                    line0+="${ascii_char[0]}"
                    line1+="${ascii_char[1]}"
                    line2+="${ascii_char[2]}"

                    IFS=$oldIFS
                ;;
                " ")
                    line0+="    "
                    line1+="    "
                    line2+="    "
                ;;
            esac
        done

        printf '\n %s\n %s\n %s\n\n' "$line0" "$line1" "$line2"
    fi
}

# ---
# LAUNCH
# ---

abet.main "$*"
